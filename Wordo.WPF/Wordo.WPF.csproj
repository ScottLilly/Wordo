    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Wordo.Core\Wordo.Core.csproj" />
    <ProjectReference Include="..\Wordo.Models\Wordo.Models.csproj" />
    <ProjectReference Include="..\Wordo.ViewModels\Wordo.ViewModels.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
