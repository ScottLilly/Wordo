    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UserSecretsId>4b46b15a-8c24-4f8a-93fe-33638a7017d1</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="5.0.0" />
